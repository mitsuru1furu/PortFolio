
<h1>質問</h1>
<%= @question.title %>
<h1>内容</h1>
<%= @question.question_comment %>
<%= link_to "修正する",edit_question_path %>

<h1>回答する</h1>
<%=form_with model: Answer.new,url: "/questions/#{@question.id}/answers", local: true do |f| %>
	<div><%= f.text_area :answer_comment %></div>
	<div><%= f.submit%></div>
<% end %>


<% @question.answers.all.each do |a|%>
	<div><%=a.answer_comment%></div>
	<%= link_to "修正する", edit_question_answers_path(a.id) %>
	<%= link_to :削除, "/questions/#{a.id}/answers",method: :delete %>
<% end %>